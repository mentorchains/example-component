<div class="custom-notification wrap">
  <h3>
    {{d-icon "bell"}}
    <strong>
      {{theme-setting "notification_type"}}
    </strong>
    {{theme-i18n "notification_message"}}
  </h3>
</div>

<div class="custom-notification-content wrap">
  <h3>
    Badges:
  </h3>
  <ul>
    {{#each badges as |badge|}}
      <li>
        {{badge.name}}
      </li>
    {{/each}}
  </ul>
</div>